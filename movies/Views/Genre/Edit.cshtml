@model movies.Models.Domain.Genre
<form class="w-40" asp-action="Edit" method="post">
    <h2 class="pb-10">Edit Genre</h2>
    <input type="hidden" asp-for="Id">

    <div class="input-container">
        <label asp-for="Name" class="w-40">GenreName</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }
    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/genre/all">All records</a>
    </div>
</form>
